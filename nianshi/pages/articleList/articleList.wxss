.feed-source{
  width: 690rpx;
  height: 190rpx;
  /* display: flex; */
  position: relative;
  left: -40rpx;
}
.feed-source .pic{
  display: inline-block;
  position: relative;
  margin-left: 0rpx;
}
.feed-source .pic image{
  top: 10rpx;
  width: 180rpx;
  height: 180rpx;
  position: relative;
  border-radius: 15rpx;
}
.feed-source .inform{
  display: inline-block;
  position: relative;
  height: 180rpx;
  width: 480rpx;
  top: 0rpx;
  margin-left: 20rpx;
}
.feed-source .inform .title_block{
  margin-right: 10rpx;
  padding-left: 0rpx;
  padding-right: 15rpx;
  font-size: 16px;
  text-align: center;
  position: relative;
  /*bottom: 10rpx;*/
  border-bottom: solid #cccece 4rpx
}
.feed-source .inform .inform-bottomleft{
  /* padding-left: 10rpx; */
  padding-right: 45rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  
}
.feed-source .inform .title{
  height:40rpx;
  width: 400rpx;
  /* line-height: 40rpx; */
  vertical-align: middle;
  /* padding: 20rpx 20rpx 200rpx 20rpx; */
  position: relative;
  /* left: 20rpx; */
  bottom: 10rpx;
  /* color: #a0acac; */
  font-size: 36rpx;
  font-weight: 300;
  /* text-align: center; */
}
.feed-source .inform .block{
  display: inline-block;
  height: 80rpx;
  width: 200rpx;
  position: relative;
  left: 30rpx;
  top: 10rpx;
  /*border-right: solid #a0acac 2rpx*/
}
.feed-source .inform .author{
  display: inline-block;
  height: 100rpx;
  width: 200rpx;
  vertical-align: middle;
  /* color: #a0acac; */
  font-size: 34rpx;
  position: relative;
  left: 50rpx;
  top:0rpx;
}
.feed-source .inform .good{
  height: 100rpx;
  width: 200rpx;
  display: inline-block;
  margin-top: 15rpx;
}
.feed-source .inform .good .block{
  display: inline-block;
  height: 100rpx;
  width: 100rpx;
  position: relative;
  bottom: 500rpx;
  left: 50rpx;
  border: none
}
.feed-source .inform .good .block image{
  height: 40rpx;
  width: 40rpx;
  /* vertical-align: text-bottom; */
  position: relative;
  top:8rpx;
}
.feed-source .inform .good .block text{
  vertical-align: left;
  /* color: #a0acac; */
  font-size: 32rpx;
  position: relative;
  right: 50rpx;
  bottom:2rpx;
}
.feed-source .author{
  display: inline-block;
  height: 40rpx;

}
.feedContent{
  width: 690rpx;
  height:80rpx;
  margin-bottom:0; 
  color: #a0acac;
  font-size: 26rpx;
  margin-top: 10rpx;
  position: relative;
  left: -30rpx;
  /* border-color: #636464; */
  /* position: relative;
  left: 100rpx; */
}
.feedContent text{
  width: 690rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-indent: 2em;
}
.feedContent_content{
  width: 540rpx;
  height:50rpx;
}
.feedContent .moreInformation{
  width: 30rpx;
  height: 30rpx;
  float: right;
  left: 600rpx;
