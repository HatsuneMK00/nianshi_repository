.container{
  height: 1500rpx;
  padding: 0rpx;
  background-color:  aliceblue;
  /* background-color:  rgb(203, 224, 243); */
}
.classes{
  height: 100rpx;
}
.classes image{
  height: 100rpx;
  width: 100vw;
}
.activities{
  height: 290rpx;
  width: 750rpx;
  padding-bottom: 10rpx;
  margin-top: 10rpx;
  /* border-bottom: 1px darkgray groove; */
  position: relative;
  background-color:  white;
}
.time{
  height: 50rpx;
  font-size: 16px;
  color: darkgray;
  position: relative;
}
.activityTime{
  height: 50rpx;
  font-size: 16px;
  font-style: italic;
  position: static;
  color: dimgray;
  padding-left: 40rpx;
}

.actImage{
  height: 200rpx;
  width: 690rpx;
  margin: 0rpx 30rpx;
  position: absolute;
  top: 10rpx;
  border-radius: 5rpx;
  opacity:0.7; 
  filter: alpha(opacity=60);
  background:#000;
}
.actImage image{
  border-radius: 5rpx;
  /* background:#000;
  opacity:0.6; 
  filter: alpha(opacity=60); */
  top: 0rpx;
  margin: 0rpx;
}
.act_title{
  width: 690rpx;
  text-align: center;
  bottom: 40%;
  color: rgb(255, 255, 255);
  font-size: 42rpx;
  font-weight: bold;
  letter-spacing: 12rpx;
  position: absolute;
  z-index: 999;
}
.sub_act_title{
  width: 690rpx;
  text-align: center;
  bottom: 20%;
  color: rgb(255, 255, 255);
  font-size: 24rpx;
  letter-spacing: 5rpx;
  position: absolute;
  z-index: 999;
}
.act_time{
  height: 40rpx;
  width: 300rpx;
  position: absolute;
  z-index: 998;
  background: linear-gradient(45deg,rgb(255,0,0),rgb(255,90,90) );
  border-radius: 20rpx 20rpx 0rpx 20rpx;
  color: white;
  font-size: 29rpx;
  text-indent: 15rpx;
}
.trangle{
  height: 0rpx;
  width: 0rpx;
  position: absolute;
  left: 590rpx;
  border-top: 100rpx solid rgb(113, 231, 83);
  border-left: 100rpx solid transparent;
  /* background: linear-gradient(#F80, #2ED) 20 20; */
  z-index: 999;
}
.phase{
  position: absolute;
  top: -100rpx;
  left:-52rpx;
  color: white;
  font-weight: bold;
}
.summary{
  height: 90rpx;
  width: 690rpx;
  position: absolute;
  top: 210rpx;
  left: 30rpx;
  background-color: white;
}
.introduction{
  height: 90rpx;
  width: 420rpx;
  padding-right: 30rpx;
  border-right: lightgray 1px solid;
}
.introduction text{
  height: 75rpx;
  width: 420rpx;
  font-size: 26rpx;
  position: absolute;
  top: 4rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-indent: 2em;
}
.heat{
  height: 50rpx;
  font-size: 24rpx;
  color: darkgray;
  left: 480rpx;
  top: 0rpx;
  position: absolute;
}
.join{
  height: 40rpx;
  width: 150rpx;
  font-size: 28rpx;
  left: 500rpx;
  position: absolute;
  top: 40rpx;
  background: linear-gradient(to right,rgb(255, 123, 0),rgb(255, 160, 71));
  border-radius: 20rpx;
}

.join text{
  position: absolute;
  top: 0rpx;
  left: 20rpx;
  font-weight: 500;
}
