/* pages/info/info.wxss */
@import '/style/weui.wxss';

.notPassImage{
  position: absolute;
  z-index: 9;
  top: -35rpx;
  width: 80%;
  height: 130%;
}

.notExamined{
  position: absolute;
  z-index: 9;
  font-size: 15;
  color: red;
}

.container{
  display: flex;
  align-items: center;
  flex-direction: column;
  align-content: center;
  padding: 0;
  margin: 0;
}
.info-block{
  /* display: table;
  vertical-align: middle;
  text-align: center; */
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 10vh;
  width: 100vw;
  border-top: 2px solid rgba(109, 108, 108, 1);
  border-bottom: 2px outset rgba(109, 108, 108, 1);
  background-color: rgba(236, 236, 236, 1);
  position: fixed;
  top:0;
  z-index: 10;
}
.info-block text{
  vertical-align: middle;
  text-align: center;
  font-size: 21px;
  width: 85vw;
  margin: 0 auto;
}

.info{
  /* display: table-cell; */
  vertical-align: middle;
  text-align: center;
  font-size: 21px;
  width: 85vw;
  margin: 0 auto;
}

.reviseBottom{
  width: 70px;
  background-color: black;
  position: absolute;
  top: 15rpx;
  left: 610rpx;
  z-index: 9;
}
/* pages/articleList/articleList.wxss */
.feed-item{
  width: 660rpx;
  height: 295rpx;
  padding: 12rpx 50rpx 0rpx 50rpx;
  margin: 0rpx 5rpx 0rpx 0rpx;
  position: relative;
  background: #fff;
  border-top: 1px solid rgb(197, 197, 197); 
  border-bottom:3px outset rgba(184, 184, 184, 0.308);
  box-shadow: 0 2px 5px #fff;
}
