<view wx:if="{{exchange==0}}" class="flash" bindtap="start_now">
  <view class="above_text">
    <view class="above_1" animation='{{ani_above_1}}'>那</view>
    <view class="above_2" animation='{{ani_above_2}}'>些</view>
    <view class="above_3" animation='{{ani_above_3}}'>年</view>
  </view>
  <image class="hello_0" src='../../images/logo.png' animation='{{ani_image}}'></image>
  <view class="below_text">
    <view class="below_4" animation='{{ani_below_4}}'>那</view>
    <view class="below_5" animation='{{ani_below_5}}'>些</view>
    <view class="below_6" animation='{{ani_below_6}}'>事</view>
  </view>
  <view class="extra" animation='{{extra}}' bindtransitionend='animation_over'></view>
  <view class="start_now" >点击屏幕开启旅程！</view>
</view> 

<view scroll-y="true" class="container" bindscrolltoupper="topLoad" >
  <swiper class="swiper-block" previous-margin="0rpx" next-margin="0rpx" current="{{swiperIndex}}" autoplay="{{autoplay}}" bindanimationfinish='swiperChange' indicator-dots='{{indicatorDots}}'>
    <block wx:for="{{imgUrls}}" wx:index="{{index}}">
      <swiper-item class="swiper-item" bindtap="{{item.bindfun}}">
        <image mode="aspectFill" src="{{item.src}}" class="slide-image {{swiperIndex == index ? 'active' : ''}}" />
        <view class='describe'>{{item.text}}</view>
      </swiper-item>
    </block>
  </swiper>                                  

  <view>
    <block wx:for="{{articles}}" wx:for-index="idx" wx:for-item="item" data-idx="{{idx}}">
      <view class="feed-item" bindtap='bindIndexTap' id='{{item.article_id}}'>
        <view class="feed-source">
          <view class="pic">

            <image src="{{item.imagesrc}}" mode='scaleToFill'></image>
            <!-- <image src="{{item.imagesrc}}" mode='aspectFill'></image> -->
          
          </view>
          <view class="inform">
            <view class='title_block'>
              <text class='title'>{{item.title}}</text>
            </view>
            <view class='inform-bottomleft'>
              <view class='block'>
                <text class="author">{{item.author}}</text>
              </view>
              <view class="good">
                <view catchtap='bindLikeTap' class='block' hover-stop-propagation='false'>

                  <image src='https://www.nianshi.xyz/images/like.png' />
                  <!-- <image  src='https://www.nianshi.xyz/images/like.png' /> -->
                </view>
                <view class='block'>
                  <text>{{item.numofLike}}</text>
                </view>
              </view>
            </view>
          </view>
        </view>
        <view class="feedContent">
          <text>{{item.describe}}</text>
          </view>
        </view>
    </block>
  </view>
</view>
